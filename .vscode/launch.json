{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            "runtimeExecutable": "${workspaceFolder}/midiaf-app/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "midiaf-app"
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/midiaf-app/node_modules/electron/dist/electron"
            }
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000
        },
        {
            "command": "yarn start",
            "name": "Launch midiaf-app",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/midiaf-app"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/statwork"
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
}